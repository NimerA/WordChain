{
  "name": "wordchain",
  "version": "1.0.0",
  "description": "An Implementation of the game Word Chain.",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src spec --ext .js",
    "test": "nyc jasmine && npm run lint",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NimerA/WordChain.git"
  },
  "author": "Nimer Ennabe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NimerA/WordChain/issues"
  },
  "homepage": "https://github.com/NimerA/WordChain#readme",
  "dependencies": {
    "eslint": "^4.4.1",
    "jasmine": "^2.7.0",
    "word-list": "^2.0.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "jasmine": "^2.6.0",
    "jasmine-co": "^1.2.2",
    "nyc": "^11.0.3"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**"
    ],
    "exclude": [
      "spec/**",
      "node_modules/**"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
